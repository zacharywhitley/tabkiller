{
  "name": "tabkiller",
  "version": "0.1.0",
  "description": "Universal browser plugin for taming prolific use of browser windows and tabs",
  "private": true,
  "scripts": {
    "build": "npm run build:all",
    "build:dev": "npm run build:all:dev",
    "build:watch": "webpack --mode development --watch",
    "dev": "webpack serve --mode development",
    "clean": "rimraf build dist",
    "build:all": "npm run build:chrome && npm run build:firefox && npm run build:safari && npm run build:edge",
    "build:all:dev": "npm run build:chrome:dev && npm run build:firefox:dev && npm run build:safari:dev && npm run build:edge:dev",
    "build:chrome": "cross-env TARGET_BROWSER=chrome webpack --mode production",
    "build:firefox": "cross-env TARGET_BROWSER=firefox webpack --mode production",
    "build:safari": "cross-env TARGET_BROWSER=safari webpack --mode production",
    "build:edge": "cross-env TARGET_BROWSER=edge webpack --mode production",
    "build:chrome:dev": "cross-env TARGET_BROWSER=chrome webpack --mode development",
    "build:firefox:dev": "cross-env TARGET_BROWSER=firefox webpack --mode development",
    "build:safari:dev": "cross-env TARGET_BROWSER=safari webpack --mode development",
    "build:edge:dev": "cross-env TARGET_BROWSER=edge webpack --mode development",
    "dev:chrome": "cross-env TARGET_BROWSER=chrome webpack serve --mode development",
    "dev:firefox": "cross-env TARGET_BROWSER=firefox webpack serve --mode development",
    "dev:safari": "cross-env TARGET_BROWSER=safari webpack serve --mode development",
    "dev:edge": "cross-env TARGET_BROWSER=edge webpack serve --mode development",
    "watch:chrome": "cross-env TARGET_BROWSER=chrome webpack --mode development --watch",
    "watch:firefox": "cross-env TARGET_BROWSER=firefox webpack --mode development --watch",
    "watch:safari": "cross-env TARGET_BROWSER=safari webpack --mode development --watch",
    "watch:edge": "cross-env TARGET_BROWSER=edge webpack --mode development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write src/**/*.{ts,js,json,css,html}",
    "type-check": "tsc --noEmit",
    "package:all": "npm run clean && npm run build:all && npm run zip:all",
    "zip:all": "npm run zip:chrome && npm run zip:firefox && npm run zip:safari && npm run zip:edge",
    "zip:chrome": "cd build/chrome && zip -r ../../dist/tabkiller-chrome.zip .",
    "zip:firefox": "cd build/firefox && zip -r ../../dist/tabkiller-firefox.zip .",
    "zip:safari": "cd build/safari && zip -r ../../dist/tabkiller-safari.zip .",
    "zip:edge": "cd build/edge && zip -r ../../dist/tabkiller-edge.zip .",
    "build:script": "./scripts/build.sh",
    "dev:script": "./scripts/dev.sh"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@types/webextension-polyfill": "^0.10.1",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-extension-reloader": "^1.1.4",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "concurrently": "^8.2.1"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "browserslist": [
    "chrome >= 88",
    "firefox >= 91",
    "safari >= 14"
  ]
}
